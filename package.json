{
  "name": "sentry-llm-traffic-demo",
  "version": "1.0.0",
  "description": "A web-based chatbot demo for showcasing Sentry's performance monitoring with LLM traffic",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "simulate": "node simulator/index.js"
  },
  "keywords": ["sentry", "llm", "performance", "monitoring", "demo"],
  "author": "Demo Application",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^7.100.0",
    "@sentry/profiling-node": "^7.100.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}